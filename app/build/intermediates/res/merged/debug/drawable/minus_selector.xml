<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <size android:width="@dimen/button_width" android:height="@dimen/button_height" />
                    <gradient android:type="radial" android:gradientRadius="80"
                        android:startColor="@color/buttonPressed" android:endColor="#303030" />                    <stroke android:color="@android:color/white" android:width="@dimen/buttons_stroke_width"/>
                    <stroke android:color="@android:color/white" android:width="@dimen/buttons_stroke_width"/>
                    <corners android:radius="@dimen/button_corners"/>
                </shape>
            </item>

            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <size android:width="@dimen/button_width" android:height="@dimen/button_height" />
                    <gradient android:type="radial" android:gradientRadius="80"
                        android:startColor="#303030" android:endColor="@color/buttonPressed" />                    <stroke android:color="@android:color/white" android:width="@dimen/buttons_stroke_width"/>
                    <stroke android:color="@color/buttonPressed" android:width="@dimen/buttons_stroke_width"/>
                    <corners android:radius="@dimen/button_corners"/>
                </shape>
            </item>
        </selector>
    </item>
    <item android:drawable="@drawable/ic_minus">
    </item>
</layer-list>